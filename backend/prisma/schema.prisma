// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id        Int    @id @default(autoincrement())
  name      String
  cnpj      String @unique
  email     String @unique
  password  String

  items Item[]
}

model Item {
  id Int @id @default(autoincrement())

  //every Item must be linked to a restaurant
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
  Order        Order[]
}

model Client {
  id Int @id @default(autoincrement())

  //more infos about the client here
  Order Order[]
}

//order table, used for the shopping_cart feature
//stores every link of a Client and a Item
model Order {
  client   Client @relation(fields: [clientId], references: [id])
  clientId Int // relation scalar field (used in the `@relation` attribute above)
  item     Item   @relation(fields: [itemId], references: [id])
  itemId   Int // relation scalar field (used in the `@relation` attribute above)

  //the number of items added on the cart
  quantity Int @default(1)

  @@id([itemId, clientId])
}